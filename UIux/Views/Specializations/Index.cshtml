<h2 class="text-center">SPECIALIZARI</h2>
<br />
<br />
<div class="row text-center">
    <div class="col-md-12">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-info justify-content-center" href="/Specializations/Create">&ensp;Adauga specializare</a>
        }
    </div>
</div>
<div class="row row-cols-1 row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-xl-3 g-3">
    @if (User.IsInRole("Admin"))
    {
        foreach (var spec in ViewBag.Specializations)
        {
            <div class="col mb-4">
                <div class="card h-100 border-secondary mb-3">
                    <a href="/Specializations/Show/@spec.SpecializationID">
                        <img class="card-img-top" src="@spec.SpecializationImage" alt="spec image" style="height:150px;" />
                    </a>
                    <div class="card-body">
                        <a href="/Specializations/Show/@spec.SpecializationID" style="color:black">
                            <h4 class="card-title text-center">@spec.Name</h4>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            <p class="card-text">@spec.SpecializationDescription</p>
                        </li><!--de bagat X cu rosu-->
                        <li class="list-group-item text-center">
                            <a class="btn btn-info" href="/Specializations/Edit/@spec.SpecializationID">&ensp;Edit</a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        foreach (var spec in ViewBag.Specializations)
        {
            <div class="col mb-4">
                <div class="card h-100 border-secondary mb-3">
                    <a href="/Specializations/Show/@spec.SpecializationID">
                        <img class="card-img-top" src="@spec.SpecializationImage" alt="spec image" style="height:150px;" />
                    </a>
                    <div class="card-body">
                        <a href="/Specializations/Show/@spec.SpecializationID" style="color:black">
                            <h4 class="card-title text-center">@spec.Name</h4>
                        </a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            <p class="card-text">@spec.SpecializationDescription</p>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
</div>
